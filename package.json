{
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/retextjs/retext",
  "repository": "https://github.com/retextjs/retext",
  "bugs": "https://github.com/retextjs/retext/issues",
  "devDependencies": {
    "bail": "1.0.3",
    "browserify": "16.2.3",
    "bundle-collapser": "1.3.0",
    "chalk": "2.4.2",
    "escodegen": "1.11.1",
    "esmangle": "1.0.1",
    "esprima": "4.0.1",
    "gk-test-a": "11.2.1",
    "gk-test-b": "11.2.1",
    "lerna": "3.13.1",
    "nlcst-test": "1.0.2",
    "nyc": "13.3.0",
    "remark-cli": "6.0.1",
    "remark-preset-wooorm": "4.0.0",
    "tape": "4.10.1",
    "unist-util-remove-position": "1.1.2",
    "xo": "0.24.0"
  },
  "dependencies": {
    "neighbourhoodie-test-package": "62.6.0",
    "gk-test-c": "11.2.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build-md": "remark . -qfo",
    "build-bundle": "browserify -p bundle-collapser/plugin packages/retext > retext.js",
    "build-mangle": "esmangle < retext.js > retext.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "echo yay"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "import/no-dynamic-require": "off"
    },
    "ignores": [
      "retext.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
